name: Unit Tests

on:
  workflow_dispatch:
  push:
    branches: [ main ]
    paths:
      - 'agents/**'
      - 'tests/unit/**'
  pull_request:
    branches: [ main ]
    paths:
      - 'agents/**' 
      - 'tests/unit/**'

jobs:
  unit-tests:
    name: Unit Tests
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'
        
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install pytest pytest-asyncio pandas numpy scipy
        pip install google-generativeai pydantic fastapi
        
    - name: Run ADK Agent unit tests
      run: |
        echo "Testing ADK Agent logic..."
        python -m pytest tests/unit/test_adk_logic.py -v
        
    - name: Generate test report
      if: always()
      run: |
        echo "Unit test summary:"
        echo "- ADK Agent: Completed"
        echo "- Next: Add Crewai and LangGraph unit tests"