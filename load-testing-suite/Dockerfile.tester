# Dockerfile.tester - Enhanced for 3-level testing
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code and test files
COPY load_test_runner.py .
COPY basic_tests.py .
COPY functional_tests.py .
COPY workflow_tests.py .
COPY minimal_load_testing.py .

# Create results directory
RUN mkdir -p /app/results

# Expose port for API
EXPOSE 8080

# Run the load tester
CMD ["python", "load_test_runner.py"]